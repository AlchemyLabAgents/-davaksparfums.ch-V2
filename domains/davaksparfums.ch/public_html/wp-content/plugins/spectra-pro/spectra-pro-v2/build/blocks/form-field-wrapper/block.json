{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "spectra-pro/form-field-wrapper",
  "version": "2.0.0",
  "title": "Form Field Wrapper",
  "category": "spectra-pro-v2",
  "description": "A wrapper that contains icon + input field in horizontal layout.",
  "keywords": [
    "form",
    "field",
    "wrapper",
    "icon",
    "input"
  ],
  "textdomain": "spectra-pro",
  "parent": [
    "spectra-pro/form-input-wrapper",
    "spectra-pro/register-user-name",
    "spectra-pro/register-email",
    "spectra-pro/register-first-name",
    "spectra-pro/register-last-name",
    "spectra-pro/register-password",
    "spectra-pro/register-confirm-password"
  ],
  "supports": {
    "anchor": true,
    "html": false,
    "__experimentalBorder": {
      "style": true,
      "width": true,
      "color": true,
      "radius": true,
      "shadow": true,
      "__experimentalDefaultControls": {
        "width": true,
        "color": true,
        "radius": true,
        "shadow": true
      }
    },
    "color": {
      "text": true,
      "background": true,
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": false
      }
    }
  },
  "example": {
    "attributes": {
      "isPreview": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./controller.php",
  "usesContext": [
    "spectra-pro/form/formId",
    "spectra-pro/form/formType",
    "spectra-pro/form/showIcons",
    "spectra-pro/form-input/fieldType",
    "spectra-pro/form-input/fieldIcon"
  ],
  "attributes": {
    "anchor": {
      "type": "string"
    },
    "layout": {
      "type": "object",
      "default": {
        "type": "flex",
        "flexWrap": "nowrap",
        "justifyContent": "left",
        "verticalAlignment": "center"
      }
    },
    "isPreview": {
      "type": "boolean",
      "default": false
    }
  }
}