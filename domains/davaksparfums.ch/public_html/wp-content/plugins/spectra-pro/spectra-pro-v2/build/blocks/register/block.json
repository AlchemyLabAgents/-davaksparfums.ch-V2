{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "spectra-pro/register",
  "version": "2.0.0",
  "title": "Register Form",
  "category": "spectra-pro-v2",
  "description": "A customizable user registration form with modular child blocks.",
  "keywords": [
    "register",
    "registration",
    "signup",
    "form",
    "user",
    "account"
  ],
  "textdomain": "spectra-pro",
  "template": [
    [
      "spectra/content",
      {
        "text": "Create Account",
        "tagName": "h2"
      }
    ],
    [
      "spectra-pro/register-user-name"
    ],
    [
      "spectra-pro/register-email"
    ],
    [
      "spectra-pro/register-password"
    ],
    [
      "spectra-pro/register-confirm-password"
    ],
    [
      "spectra-pro/form-button",
      {
        "buttonText": "Register",
        "buttonType": "submit"
      }
    ]
  ],
  "templateLock": false,
  "allowedBlocks": [
    "spectra/content",
    "spectra-pro/form-input-wrapper",
    "spectra-pro/register-user-name",
    "spectra-pro/register-email",
    "spectra-pro/register-first-name",
    "spectra-pro/register-last-name",
    "spectra-pro/register-password",
    "spectra-pro/register-confirm-password",
    "spectra-pro/form-input-label",
    "spectra-pro/form-icon",
    "spectra-pro/form-input-field",
    "spectra-pro/register-terms-and-conditions",
    "spectra-pro/form-button",
    "spectra-pro/form-link",
    "spectra-pro/form-message",
    "spectra-pro/form-recaptcha"
  ],
  "supports": {
    "interactivity": true,
    "anchor": true,
    "html": false,
    "multiple": false,
    "align": [
      "wide",
      "full"
    ],
    "layout": {
      "default": {
        "type": "flex",
        "orientation": "vertical",
        "flexWrap": "nowrap",
        "justifyContent": "stretch",
        "verticalAlignment": "center",
        "gap": "20px"
      },
      "allowSizingOnChildren": true,
      "allowSwitching": true
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true,
      "__experimentalDefaultControls": {
        "margin": false,
        "padding": true,
        "blockGap": true
      }
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "shadow": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true,
        "shadow": true
      }
    },
    "color": {
      "background": false,
      "gradients": false,
      "__experimentalDefaultControls": {
        "text": true
      }
    },
    "shadow": true,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextTransform": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalDefaultControls": {
        "fontSize": false,
        "fontFamily": false
      }
    }
  },
  "example": {
    "attributes": {
      "isPreview": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "providesContext": {
    "spectra-pro/form/formType": "formType",
    "spectra-pro/form/block_id": "block_id",
    "spectra-pro/form/showLabels": "showLabels",
    "spectra-pro/form/showIcons": "showIcons",
    "spectra-pro/form/showPasswordToggle": "showPasswordToggle",
    "spectra-pro/form/overallAlignment": "overallAlignment",
    "spectra-pro/form/alignRegisterBtn": "alignRegisterBtn",
    "spectra-pro/form/usernameLabel": "usernameLabel",
    "spectra-pro/form/usernamePlaceholder": "usernameplaceholder",
    "spectra-pro/form/emailLabel": "emailLabel",
    "spectra-pro/form/emailplaceholder": "emailplaceholder",
    "spectra-pro/form/passwordLabel": "passwordLabel",
    "spectra-pro/form/passwordplaceholder": "passwordplaceholder",
    "spectra-pro/form/confirmPasswordLabel": "confirmPasswordLabel",
    "spectra-pro/form/confirmPasswordplaceholder": "confirmPasswordplaceholder",
    "spectra-pro/form/firstNameLabel": "firstNameLabel",
    "spectra-pro/form/firstNameplaceholder": "firstNameplaceholder",
    "spectra-pro/form/lastNameLabel": "lastNameLabel",
    "spectra-pro/form/lastNameplaceholder": "lastNameplaceholder",
    "spectra-pro/form/registerButtonLabel": "registerButtonLabel",
    "spectra-pro/form/loginLinkLabel": "loginLinkLabel",
    "spectra-pro/form/labelColor": "labelColor",
    "spectra-pro/form/labelColorHover": "labelColorHover",
    "spectra-pro/form/inputTextColor": "inputTextColor",
    "spectra-pro/form/inputTextColorHover": "inputTextColorHover",
    "spectra-pro/form/inputBgColor": "inputBgColor",
    "spectra-pro/form/inputBgColorHover": "inputBgColorHover",
    "spectra-pro/form/inputPlaceholderColor": "inputPlaceholderColor",
    "spectra-pro/form/inputPlaceholderColorHover": "inputPlaceholderColorHover",
    "spectra-pro/form/iconColor": "iconColor",
    "spectra-pro/form/demoFieldErrorMessage": "demoFieldErrorMessage",
    "spectra-pro/form/messageInvalidEmailError": "messageInvalidEmailError",
    "spectra-pro/form/messageEmailMissingError": "messageEmailMissingError",
    "spectra-pro/form/messageEmailAlreadyUsedError": "messageEmailAlreadyUsedError",
    "spectra-pro/form/messageInvalidUsernameError": "messageInvalidUsernameError",
    "spectra-pro/form/messageUsernameMissingError": "messageUsernameMissingError",
    "spectra-pro/form/messageUsernameAlreadyUsedError": "messageUsernameAlreadyUsedError",
    "spectra-pro/form/messageInvalidPasswordError": "messageInvalidPasswordError",
    "spectra-pro/form/messagePasswordConfirmError": "messagePasswordConfirmError",
    "spectra-pro/form/messageTermsError": "messageTermsError",
    "spectra-pro/form/messageOtherError": "messageOtherError",
    "spectra-pro/form/messageSuccessRegistration": "messageSuccessRegistration",
    "spectra-pro/form/linkColor": "linkColor",
    "spectra-pro/form/linkColorHover": "linkColorHover",
    "spectra-pro/form/demoSuccessMessage": "demoSuccessMessage",
    "spectra-pro/form/demoErrorMessage": "demoErrorMessage"
  },
