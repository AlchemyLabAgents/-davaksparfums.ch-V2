{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "spectra-pro/form-button",
  "version": "2.0.0",
  "title": "Form Button",
  "category": "spectra-pro-v2",
  "description": "Add a form submit button.",
  "textdomain": "spectra-pro",
  "parent": [
    "spectra-pro/login",
    "spectra-pro/register"
  ],
  "supports": {
    "__experimentalBorder": {
      "width": true,
      "color": true,
      "radius": true,
      "style": true,
      "shadow": true,
      "__experimentalDefaultControls": {
        "width": true,
        "color": true,
        "radius": true,
        "shadow": true
      }
    },
    "html": false,
    "align": true,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "textAlign": true,
      "__experimentalFontFamily": true,
      "__experimentalFontStyle": true,
      "__experimentalFontWeight": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalTextTransform": true,
      "__experimentalWritingMode": true,
      "__experimentalDefaultControls": {
        "fontSize": true,
        "fontFamily": true
      }
    },
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    }
  },
  "usesContext": [
    "spectra-pro/form/alignLoginBtn",
    "spectra-pro/form/loginSize",
    "spectra-pro/form/submitButtonText",
    "spectra-pro/form/ctaIcon",
    "spectra-pro/form/ctaIconPosition",
    "spectra-pro/form/ctaIconSpace",
    "spectra-pro/form/overallAlignment"
  ],
  "example": {
    "attributes": {
      "isPreview": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "isPreview": {
      "type": "boolean",
      "default": false
    },
    "text": {
      "type": "string",
      "default": "Submit"
    },
    "icon": {
      "type": [
        "string",
        "object"
      ]
    },
    "iconPosition": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "rotation": {
      "type": "number"
    },
    "gap": {
      "type": "string"
    },
    "flipForRTL": {
      "type": "boolean",
      "default": false
    },
    "showText": {
      "type": "boolean",
      "default": true
    },
    "textColorHover": {
      "type": "string"
    },
    "iconColor": {
      "type": "string"
    },
    "iconColorHover": {
      "type": "string"
    },
    "backgroundColorHover": {
      "type": "string"
    },
    "backgroundGradientHover": {
      "type": "string"
    },
    "borderHover": {
      "type": "object"
    },
    "shadowHover": {
      "type": "object"
    },
    "showIconOnHover": {
      "type": "boolean",
      "default": false
    },
    "hoverIcon": {
      "type": [
        "string",
        "object"
      ]
    },
    "hoverIconPosition": {
      "type": "string"
    },
    "hoverIconRotation": {
      "type": "number",
      "default": 0
    },
    "hoverIconFlipForRTL": {
      "type": "boolean",
      "default": false
    },
    "hoverIconAriaLabel": {
      "type": "string"
    },
    "width": {
      "type": "string"
    },
    "buttonAlignment": {
      "type": "string",
      "default": "left"
    }
  }
}