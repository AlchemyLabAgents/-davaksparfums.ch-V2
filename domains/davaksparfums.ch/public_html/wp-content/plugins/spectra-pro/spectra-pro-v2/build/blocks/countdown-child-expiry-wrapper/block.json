{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "spectra/countdown-child-expiry-wrapper",
  "version": "3.0.0",
  "title": "Expiry Wrapper",
  "category": "spectra",
  "description": "Display custom content after the countdown timer expires, such as messages or actions for visitors.",
  "parent": [
    "spectra/countdown"
  ],
  "textdomain": "ultimate-addons-for-gutenberg",
  "usesContext": [
    "countdown"
  ],
  "supports": {
    "lock": false,
    "__experimentalBorder": {
      "width": true,
      "color": true,
      "radius": true,
      "style": true,
      "shadow": true
    },
    "layout": {
      "default": {
        "type": "flex",
        "orientation": "vertical",
        "flexWrap": "nowrap",
        "justifyContent": "center",
        "verticalAlignment": "center"
      },
      "allowSwitching": true
    },
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontStyle": true,
      "__experimentalFontWeight": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalTextTransform": true,
      "__experimentalWritingMode": true,
      "__experimentalDefaultControls": {
        "fontSize": true,
        "fontFamily": true
      }
    }
  },
  "example": {
    "attributes": {
      "isPreview": true
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "attributes": {
    "isPreview": {
      "type": "boolean",
      "default": false
    },
    "layout": {
      "type": "object",
      "default": {
        "type": "flex",
        "orientation": "vertical",
        "flexWrap": "nowrap",
        "justifyContent": "center",
        "verticalAlignment": "center"
      }
    },
    "show": {
      "type": "boolean",
      "default": true
    },
    "textColor": {
      "type": "string"
    },
    "textColorHover": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string"
    },
    "backgroundColorHover": {
      "type": "string"
    },
    "backgroundGradient": {
      "type": "string"
    },
    "backgroundGradientHover": {
      "type": "string"
    }
  }
}