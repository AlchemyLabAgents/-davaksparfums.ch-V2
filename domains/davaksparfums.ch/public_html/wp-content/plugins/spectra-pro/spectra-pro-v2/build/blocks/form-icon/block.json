{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "spectra-pro/form-icon",
  "version": "2.0.0",
  "title": "Form Icon",
  "category": "spectra-pro-v2",
  "description": "Add an icon for form input fields.",
  "textdomain": "spectra-pro",
  "parent": [
    "spectra-pro/form-input-wrapper",
    "spectra-pro/register-user-name",
    "spectra-pro/register-email",
    "spectra-pro/register-first-name",
    "spectra-pro/register-last-name",
    "spectra-pro/register-password",
    "spectra-pro/register-confirm-password"
  ],
  "usesContext": [
    "spectra-pro/form/formType",
    "spectra-pro/form/block_id",
    "spectra-pro/form/showIcons",
    "spectra-pro/form/iconColor",
    "spectra-pro/form-input/fieldType"
  ],
  "supports": {
    "anchor": true,
    "__experimentalBorder": {
      "width": true,
      "color": true,
      "radius": true,
      "style": true,
      "shadow": true,
      "__experimentalDefaultControls": {
        "width": true,
        "color": true,
        "radius": true,
        "shadow": true
      }
    },
    "align": true,
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "gradients": false,
      "text": false,
      "background": false,
      "__experimentalDefaultControls": {
        "background": false
      }
    }
  },
  "example": {
    "attributes": {
      "isPreview": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./controller.php",
  "style": [
    "file:./style-index.css",
    "spectra-components-icon-picker"
  ],
  "attributes": {
    "anchor": {
      "type": "string"
    },
    "isPreview": {
      "type": "boolean",
      "default": false
    },
    "icon": {
      "type": [
        "string",
        "object"
      ]
    },
    "fieldType": {
      "type": "string"
    },
    "flipForRTL": {
      "type": "boolean",
      "default": false
    },
    "size": {
      "type": "string"
    },
    "rotation": {
      "type": "number"
    },
    "accessibilityMode": {
      "type": "string"
    },
    "accessibilityLabel": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    }
  }
}